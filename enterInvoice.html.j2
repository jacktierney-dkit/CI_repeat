<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Enter Invoice</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</head>

<body>
    {% include 'menu.html' %}
    <div class="container">
        <div class="card  mt-5">
            <div class="card-header">{{title}}</div>
            <div class="card-body">
                <form action="/create_invoice" method="POST">
                    <div class="mt-3">
                        <label for="" class="form-label">Select Item</label>
                        <select class="form-control form-select" name="item" id="item_select">
                            {% for item in data%}
                            <option value="{{loop.index}}">{{item[0]}}</option>
                            {%endfor%}
                        </select>
                    </div>
                    <div class="mt-3">
                        <label for="" class="'form-label">Quantity</label>
                        <input type="number" class="form-control" name="quantity" value=1 id="quantity">
                    </div>
                    <div class="mt-3">
                        <label for="" class="'form-label">Currency</label>
                        <select class="form-control form-select" name="selccy" id="ccy">
                            {% for ccy in ccys %}
                            <option value="{{ccy}}" id="{{ccy}}">{{ccy}}</option>
                            {% endfor%}
                        </select>
                    </div>
                    <div class="mt-3">
                        <input type="submit" value="Save" class="btn btn-success float-end" id="submit">
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
        crossorigin="anonymous"></script>
</body>

</html>